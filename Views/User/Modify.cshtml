@model GuestBook.Models.User
@{
    Layout = "~/Views/_Layout.cshtml";
}
<div>
    <form method="post">
        <div class="form-group">
            <label asp-for="GivenName"></label>
            <input asp-for="GivenName" value="@Model?.GivenName" />
        </div>
        <div class="form-group">
            <label asp-for="FamilyName"></label>
            <input asp-for="FamilyName" value="@Model?.FamilyName" />
        </div>
        <div>
            <input id="UserId" type="hidden" asp-for="UserId" value="@Model?.UserId" />
        </div>
        <button asp-controller="User" asp-action="Update" asp-route-ID="@Model?.UserId">Update</button>

    </form>
</div>

